# top-most EditorConfig file
root = true

[*]
trim_trailing_whitespace = true
insert_final_newline = true

[*.{js,ts}]
indent_size = 2
indent_style = space

[src/**/Templates/**/*.json]
indent_size = 2
indent_style = tab
# TTP doesn't insert these, it actively removes them
insert_final_newline = false
